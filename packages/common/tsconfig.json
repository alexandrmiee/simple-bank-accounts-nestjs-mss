{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es5",
    "lib": ["es5"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true
  },
  "include": ["./src", "./src/api"]
}
